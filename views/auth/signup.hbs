<div id="signup">
    <h2>Signing up for Smartass</h2>
    <form action="/signup" method="POST">
        <label for="input-username"> Username </label>
        <input type="text" name="username" placeholder="Your username" />

        <label for="input-email"> Email </label>
        <input type="email" id="input-email" name="email" placeholder="Your email" />


        <label for="input-fullname"> Full name </label>
        <input type="text" id="input-fullname" name="fullname" placeholder="Your full name" />

        <label for="input-password"> Password </label>
        <input type="password" name="password" id="input-password" placeholder="********" />

        <label for="repeat-password"> Repeat password </label>
        <input type="password" name="repeatpassword" id="repeat-password" placeholder="********" />

        <button type="submit">Create account</button>

        {{!-- error message will be added here --}}
    </form>
</div>