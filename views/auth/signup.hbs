<div class="auth">
    <h2 class="auth-title">Signing up for Smartass</h2>
    <form action="/auth/signup" method="POST" class="auth-form">
        <label for="input-username"></label>
        <input type="text" name="username" value="{{username}}" placeholder="Your username" />

        <label for="input-email"></label>
        <input type="email" id="input-email" name="email" value="{{email}}" placeholder="Your email" />

        <label for="input-fullname"></label>
        <input type="text" id="input-fullname" name="fullname" value="{{fullName}}" placeholder="Your full name" />

        <label for="input-location"></label>
        <input type="text" id="input-location" name="location" value="{{location}}" placeholder="Your location" />

        <label for="input-password"></label>
        <input type="password" name="password" id="input-password" placeholder="Your password" />

        <label for="repeat-password"></label>
        <input type="password" name="repeatpassword" id="repeat-password" placeholder="Repeat the password" />

        <button type="submit" class="auth-btn">Create account</button>
    </form>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}

</div>