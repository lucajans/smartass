<div id="signup">
    <h2>Signing up for Smartass</h2>
    <form action="/signup" method="POST">
        <label for="input-username"> Username </label>
        <input type="text" name="username" value="{{username}}" placeholder="Your username" />

        <label for="input-email"> Email </label>
        <input type="email" id="input-email" name="email" value="{{email}}" placeholder="Your email" />

        <label for="input-fullname"> Full name </label>
        <input type="text" id="input-fullname" name="fullName" value="{{fullName}}" placeholder="Your full name" />

        <label for="input-location"> Location </label>
        <input type="text" id="input-location" name="location" value="{{location}}" placeholder="Your location" />
        {{!--
        <label for="private">Private</label>
        <input type="radio" id="private" name="privacy" value="private">

        <label for="public">Public</label>
        <input type="radio" id="public" name="privacy" value="public"> --}}

        <label for="input-password"> Password </label>
        <input type="password" name="password" id="input-password" placeholder="********" />

        <label for="repeat-password"> Repeat password </label>
        <input type="password" name="repeatpassword" id="repeat-password" placeholder="********" />

        <button type="submit">Create account</button>
    </form>
    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
</div>