<div class="page">
    <h2 class="page-title">Create a new goal</h2>
    <form action="/createGoal" method="POST" id="create-goal" class="basic-form">
        <div>
            <label for="goalName"> Give your goal a cool name: </label>
            <input type="text" id="goalName" name="goalName" />
        </div>
        <div>
            <label for="category"> Goal category </label>
            <select name="category" id="category" placeholder="The goal category" />
            <option value="" disabled selected hidden>Choose a category</option>
            <option value="books">Books</option>
            <option value="movies">Movies</option>
            <option value="runs">Runs</option>
            <option value="gym sessions">Gym sessions</option>
            <option value="bike rides">Bike rides</option>
            <option value="cooking at home">Cooking at home</option>
            </select>
        </div>
        <div>
            <label for="goalNumber"> Goal number </label>
            <input type="number" id="goalNumber" name="goalNumber" placeholder="Your goal" />
        </div>
        <div>
            <label for="startDate"> Start date </label>
            <input type="date" id="startDate" name="startDate" />
        </div>
        <div>
            <label for="endDate"> End date </label>
            <input type="date" id="endDate" name="endDate" />
        </div>
        <div>
            <button type="submit" class="basic-btn" id="create-goal-btn">Submit goal</button>
        </div>
    </form>
</div>